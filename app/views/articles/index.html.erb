<h1>Тестовый блог на Ruby on Rails</h1>


<div class="add_post"><%= link_to 'Добавить запись', new_article_path %></div>
 
  <% @articles.each do |article| %>
    <div class="post">
  		<h2><%= link_to article.title, article_path(article) %></h2>
  		<p><%= article.text %></p>
  		<div class="tags">
        Тэги: 
        <% article.tags.each do |tag| %>
          <%= link_to tag.tag, article_tag_path(article._id,tag._id) %>,
        <% end %>
      </div>
	  </div>
	  <div class="post_options">
      <div class="comments"> 
        <%= article.comments.count %> Комментариев
      </div>
		  <div class="option">
        <%= link_to 'Редактировать', edit_article_path(article) %>
        <%= link_to 'Удалить', article_path(article),
          method: :delete,
          data: { confirm: 'Вы действительно хотите удалить запись?' } %>
      </div>
	  </div>
    </tr>
  <% end %>
</table>