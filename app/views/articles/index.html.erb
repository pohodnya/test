<h1>Тестовый блог на Ruby on Rails</h1>


<div class="add_post"><%= link_to 'Добавить запись', new_article_path %></div>
 
  <% @articles.each do |article| %>
      <div class="post">
		<h2><%= link_to article.title, article_path(article) %></h2>
		<p><%= article.text %></p>
		<div class="tags">Тэги: <%= render article.tags %></div>
	  </div>
	  <div class="post_options">
		  <div class="option delete"><%= link_to 'Редактировать', edit_article_path(article) %></div>
		  <div class="option edit"><%= link_to 'Удалить', article_path(article),
				  method: :delete,
				  data: { confirm: 'Вы действительно хотите удалить запись?' } %></div 	>
	  </div>
    </tr>
  <% end %>
</table>